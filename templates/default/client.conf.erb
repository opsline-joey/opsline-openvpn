# OpenVPN client configuration file
# Generated by Chef - local changes will be overwritten!

# Please refer to the OpenVPN documentation for details on
# configuration settings.

client
dev tun
proto <%= @config['proto'] %>
remote <%= @config['gateway'] %> <%= @config['port'] %>
resolv-retry infinite
nobind
persist-key
persist-tun
ca ca.crt
cert <%= @config['base_dir'] %>/keys/<%= @config['username'] %>.crt
key <%= @config['base_dir'] %>/keys/<%= @config['username'] %>.key
comp-lzo
verb 3
<% if @config['tls_key'] -%>
tls-auth <%= @config['base_dir'] %>/keys/<%= @config['tls_key'] %> 1
<% end -%>
